{
  "buildCommand": "echo 'Static site - no build needed'",
  "outputDirectory": "./",
  "public": "./",
  "rewrites": [
    {
      "source": "/:path*",
      "destination": "/$1.html"
    },
    {
      "source": "/",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/404.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=60"
        }
      ]
    },
    {
      "source": "/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "cleanUrls": false,
  "trailingSlash": false,
  "env": {
    "PRODUCTION": "true"
  }
}
